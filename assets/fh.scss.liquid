h1, h2, p {
	margin:0;
	color:white;
}

input{
	background-color: rgba(0,0,0,0) !important;
	border-left: 0;
	border-right: 0;
	border-top: 0;
	border-bottom: 1px solid white;
}

.btn{
	color:white;
	background-color: rgba(0,0,0,0);
	padding:0 !important;
	border-left: 0;
	border-right: 0;
	border-top: 0;
	border-bottom: 0;

}

.btn:hover{
	color:green;
	background-color: orange;
}

.password-page{
	position:absolute;
	top:0;
	font-family: Arial;
	font-weight: bold;
}

.shopify-section-password-header{
	display: none;
}

.container-holding{
	width: 100%;
	/*
	background-color:black;
	*/
}

.logo-ticker{
	margin-bottom:0 auto;
	height:20vh;
}
	.logo-contents{
		font-size:10rem;
		padding-top: 1rem;
		letter-spacing: 2px;
		color: red;
	}

.capture-holding{
	position: absolute;
    top: 65%;
    width: 100%;
    height: 15vh;
    padding-top: 4%;
    color: blue;
}

.speedlogo{
	width: 80%;
    left: 10%;
    margin: 0 auto;
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
}
	.input-group__field{
		margin-bottom:0;
		border-bottom: 1px solid black !important;
	}

	.input{
		
		font-family: "helvetica", sans-serif;
	}

	#PasswordNewsletterForm-email{
		padding:0;
	}

	.capture-holding .password__input-group{
		padding-top: 1.5%;
		padding-bottom: 2%;
	}

	.input-group__btn .btn, .input-group__btn .shopify-payment-button .shopify-payment-button__button--unbranded, .shopify-payment-button .input-group__btn .shopify-payment-button__button--unbranded{
		font-family: Arial;
		color:black;
		font-size: 1.3rem;
		padding-left: 2.5%
	}

	.btn:not([disabled]):hover, .shopify-payment-button .shopify-payment-button__button--unbranded:not([disabled]):hover, .btn:focus, .shopify-payment-button .shopify-payment-button__button--unbranded:focus{
		color:black;
		border:1px solid black;
		background-color: white;
	}

	.password__input-group{
		left:50%;
		translateX:(-50%);
		max-width: 30rem;
	}

	@media only screen and (max-width: 600px) {
	   	.password__input-group{
			max-width: 19rem;
		}
	}

.capture-video{
	width:50%;
	height:40vh;
	float:left;
	background-color:black;
	overflow: hidden;

	border:1px solid green;
}
		
	.capture-video iframe{
		width:130%;
		height:130%;
		margin-left:-15%;
		margin-top:-7.5%;
		

	}

.capture-collab{
	width:50%;
	height:40vh;
	float:left;
	background-color:black;
	overflow: scroll;

	border:1px solid green;

}
	.capture-collab p{
		font-size: 4rem;
	}

.capture-live{
	width: 100%;
}

.capture-earth{
